<h1>Search Routes</h1>
<%= form_tag({controller: "routes", action: "search"}) do %>
  <p>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% if not @results.nil? 
 @results.each do |route| %>
  <tr>
    <td><%= route.name %></td>
    <td><%= route.address %></td>
    <td><%= link_to 'Show', :controller => 'routes', :action => 'show', :id => route.id %></td>
  </tr>
<% end 
end %>
</table>

<br />

<%= link_to 'New Route', :controller => new_route_path %>